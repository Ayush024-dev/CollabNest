FROM node:20-alpine

WORKDIR /usr/src/app

# ðŸ”„ FIX 1: Copy package.json and package-lock.json from current folder
COPY package*.json ./

# âœ… Install only production dependencies
RUN npm ci --only=production

# ðŸ”„ FIX 2: Copy all source code into image
COPY . .

# âœ… Create non-root user
RUN addgroup -g 1001 -S nodejs
RUN adduser -S nodejs -u 1001
RUN chown -R nodejs:nodejs /usr/src/app

USER nodejs

EXPOSE 8080

# âœ… Healthcheck (depends on your healthcheck.js and route existing)
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node healthcheck.js || exit 1

# âœ… Start your backend app
CMD [ "node", "index.js" ]
